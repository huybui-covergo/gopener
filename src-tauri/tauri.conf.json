{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gopener",
  "version": "0.1.0",
  "identifier": "com.gopener.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Gopener",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "fileAssociations": [
      {
        "ext": ["doc", "docx", "odt", "rtf", "txt"],
        "name": "Document",
        "description": "Office Document",
        "role": "Editor"
      },
      {
        "ext": ["xls", "xlsx", "ods", "csv", "tsv"],
        "name": "Spreadsheet",
        "description": "Office Spreadsheet",
        "role": "Editor"
      },
      {
        "ext": ["ppt", "pptx", "odp"],
        "name": "Presentation",
        "description": "Office Presentation",
        "role": "Editor"
      }
    ]
  },
  "plugins": {
    "dialog": null,
    "shell": {
      "open": true
    }
  }
}
